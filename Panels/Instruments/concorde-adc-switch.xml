<?xml version="1.0"?>

<PropertyList>

 <name>ADC switch</name>
 <w-base>156</w-base>
 <h-base>104</h-base>

 <params>
  <adc-switch>/controls/adc/system[0]/switch</adc-switch>
  <adc-num>/controls/adc/system[0]/num</adc-num>
 </params>


 <layers>

  

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <condition>
       <equals>
        <property alias="../../../../../../../params/adc-num"/>
        <value>0</value>
       </equals>
     </condition>
     <offset>-48</offset>
    </transformation>
    <transformation>
     <type>x-shift</type>
     <condition>
       <equals>
        <property alias="../../../../../../../params/adc-num"/>
        <value>1</value>
       </equals>
     </condition>
     <offset>33</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>25</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>10</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>OFF</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <condition>
       <equals>
        <property alias="../../../../../../../params/adc-num"/>
        <value>0</value>
       </equals>
     </condition>
     <offset>-48</offset>
    </transformation>
    <transformation>
     <type>x-shift</type>
     <condition>
       <equals>
        <property alias="../../../../../../../params/adc-num"/>
        <value>1</value>
       </equals>
     </condition>
     <offset>24</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-30</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  

 </actions>
 
</PropertyList>
