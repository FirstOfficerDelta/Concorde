<?xml version="1.0"?>

<!-- Hydraulic pump selector switch :

     - label to the right by default.
-->

<PropertyList>

 <name>Pump selector</name>
 <w-base>153</w-base>
 <h-base>102</h-base>

 <params>
  <onload-pump>/controls/hydraulic/circuit[1]/onload[1]</onload-pump>
  <shut-pump>/controls/hydraulic/circuit[1]/valve[1]</shut-pump>
  <guard-pump>/controls/hydraulic/circuit[1]/guard[1]</guard-pump>
  <engine-num>/systems/engines/engine[0]/engine-num</engine-num>
 </params>


 <layers>


<!-- labels -->

  <layer>
   <name>Title on</name>
   <type>switch</type>

   <layer>
    <name>Title on left</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>2</value>
     </equals>
    </condition>
    <type>text</type>
    <point-size>8</point-size>
    <color>
     <red>1.0</red>
      <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>ON</text>
      </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-30</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>14</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Title on default</name>
    <type>text</type>
    <point-size>8</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
       <text>ON</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>50</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>14</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title off</name>
   <type>switch</type>

   <layer>
    <name>Title off left</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>2</value>
     </equals>
    </condition>
    <type>text</type>
    <point-size>8</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
      <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>AUTO</text>
      </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
       <offset>-36</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-3</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Title off default</name>
    <type>text</type>
    <point-size>8</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>AUTO</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>44</offset>
     </transformation>
     <transformation>
       <type>y-shift</type>
      <offset>-3</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Title 3</name>
   <type>switch</type>

   <layer>
    <name>Title 3 left</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>2</value>
     </equals>
    </condition>
    <type>text</type>
    <point-size>8</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>SHUT</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-35</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-20</offset>
     </transformation>
    </transformations>
   </layer>

   <layer>
    <name>Title 3 default</name>
    <type>text</type>
    <point-size>8</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>literal</type>
      <text>SHUT</text>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>45</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-20</offset>
     </transformation>
    </transformations>
   </layer>
  </layer>

  <layer>
   <name>Number</name>
   <type>text</type>
   <point-size>9</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>text-value</type>
     <property alias="../../../../../params/engine-num"/>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>17</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>


 </actions>
 
</PropertyList>
