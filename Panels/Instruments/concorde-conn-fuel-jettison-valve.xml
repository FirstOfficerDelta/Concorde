<?xml version="1.0"?>

<!-- Jettison valve. -->


<PropertyList>
 <name>Jettison valve</name>
 <w-base>50</w-base>
 <h-base>100</h-base>

 <params>
  <jettison-valve>/controls/fuel/tank[4]/jettison-valve</jettison-valve>
  <engine-num>/systems/engines/engine[0]/engine-num</engine-num>
  <defined-status>/systems/electrical/power/specific</defined-status>
 </params>


 <layers>
  
   

  <layer>
   <name>number</name>
   <type>switch</type>

   <layer>
    <name>3</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>3</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-3.png</path>
     <x1>0</x1>
     <y1>0</y1>
     <x2>1</x2>
     <y2>1</y2>
    </texture>
    <w>15</w>
    <h>15</h>
   </layer>

   <layer>
    <name>4</name>
    <condition>
     <equals>
      <property alias="../../../../../../params/engine-num"/>
      <value>4</value>
     </equals>
    </condition>
    <texture>
     <path>Aircraft/Concorde/Panels/Instruments/Textures/concorde-4.png</path>
     <x1>0</x1>
     <y1>0</y1>
     <x2>1</x2>
     <y2>1</y2>
    </texture>
    <w>15</w>
    <h>15</h>
   </layer>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-42</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
