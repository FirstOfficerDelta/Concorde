<?xml version="1.0"?>

<!-- Group control switch :
-->

<PropertyList>

 <name>Group switch</name>
 <w-base>102</w-base>
 <h-base>102</h-base>

 <params>
  <eng-num>/systems/engines/engine[0]/engine-num</eng-num>
  <select-group>/controls/temperature/group[0]/on</select-group>
  <guard-group>/controls/temperature/group[0]/guard</guard-group>
 </params>


 <layers>

 

<!-- labels -->

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>ON</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>24</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title group</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>GROUP</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>15</offset>
    </transformation>
    <transformation>
     <type>rotation</type>
     <offset>90</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title group number</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/eng-num"/>
     <format>%1.f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-28</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>FAILED</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-20</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-40</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

 

 </actions>
 
</PropertyList>
