<?xml version="1.0"?>

<!-- Disconnects CSD from engine :

     - can only be reset on the ground.
-->

<PropertyList>

 <name>CSD disconnect</name>
 <w-base>150</w-base>
 <h-base>100</h-base>

 <params>
  <select-csd>/controls/engines/engine[0]/csd</select-csd>
  <guard-csd>/controls/engines/engine[0]/csd-guard</guard-csd>
 </params>


 <layers>


<!-- labels -->

  <layer>
   <name>Title on</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>NORM</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>40</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>24</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title off</name>
   <type>text</type>
   <point-size>8</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>DISC</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>47</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-30</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>


 </actions>
 
</PropertyList>
