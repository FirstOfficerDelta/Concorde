<?xml version="1.0"?>
<PropertyList>
  <path>../Models/tcafueltemp.ac</path>
  <params>
    <egt>/engines/engine[2]/egt-degf</egt>
  </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Guage</object-name>
    <object-name>Needle1</object-name>
    <object-name>Needle2</object-name>
    <object-name>Alarm1On</object-name>
    <object-name>Alarm1Off</object-name>
    <object-name>Alarm2On</object-name>
    <object-name>Alarm2Off</object-name>

</effect>


  <animation>
    <type>select</type>
    <object-name>Alarm1On</object-name>
   <condition>
    <and>
    <or>
        
          <greater-than>
            <property>/engines/engine[2]/egt-degf</property>
            <value>1520</value>
          </greater-than>      
       <property>/controls/lighting/crew/engineer/forward/test</property>
       </or>
       <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Alarm1Off</object-name>
    <condition>
    <not>
    <and>
    <or>
        
          <greater-than>
            <property>/engines/engine[2]/egt-degf</property>
            <value>1520</value>
          </greater-than>      
       <property>/controls/lighting/crew/engineer/forward/test</property>
       </or>
       <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
     </not>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Alarm2On</object-name>
    <condition>
    <and>
    <or>
        
          <greater-than>
            <property>/engines/engine[2]/egt-degf</property>
            <value>1520</value>
          </greater-than>      
       <property>/controls/lighting/crew/engineer/forward/test</property>
       </or>
       <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Alarm2Off</object-name>
  <condition>
    <not>
    <and>
    <or>
        
          <greater-than>
            <property>/engines/engine[2]/egt-degf</property>
            <value>1520</value>
          </greater-than>      
       <property>/controls/lighting/crew/engineer/forward/test</property>
       </or>
       <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
     </not>
    </condition>
  </animation>

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Needle1</object-name>
    <expression>
      <product>
        <difference>
          <product><property>/engines/engine[2]/egt-degf</property><value>0.95</value></product>
          <value>32</value>
        </difference>
        <value>0.075</value>
      </product>
    </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.00332</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Needle2</object-name>
          <property>/engines/engine[2]/oil-pressure-psi</property>
        <factor>1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>-0.00289</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
 
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Guage</object-name>
    <object-name>Needle1</object-name>
    <object-name>Needle2</object-name>

  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

</PropertyList>
