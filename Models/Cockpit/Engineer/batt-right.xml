<?xml version="1.0"?>
<PropertyList>
   <params>
  <master-bat>/controls/electric/dc/master-bat[1]</master-bat>
  <ess-main-split>/controls/electrical/dc/esma</ess-main-split>
 </params>
  <path>../Models/switch.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Nut</object-name>
    <object-name>Ball</object-name>
    <object-name>Switch</object-name>
</effect>

  <animation>

    <type>rotate</type>
    <object-name>Switch</object-name>
    <property>/controls/electrical/dc/esma</property>
	<condition>
    <property>/controls/electric/dc/master-bat[1]</property>
  	</condition>
      <interpolation>
      <entry>
        <ind>0</ind>
        <dep>35</dep>
      </entry>
      <entry>
        <ind>1</ind>
        <dep>0</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>

  </animation>

  <animation>
    <type>pick</type>
    <object-name>Switch</object-name>
	<condition>
    <property>/controls/electric/dc/master-bat[1]</property>
  	</condition>
    <action>
      <name>Captain INS Switch</name>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>/controls/electrical/dc/esma</property>
        <step>1</step>
        <min>0</min>
        <max>1</max>
        <wrap>true</wrap>
      </binding>
     <binding>
        <command>property-toggle</command>
        <property>/instrumentation/generic/click</property>
      </binding>
    </action>

</animation>











<animation>
    <type>rotate</type>
    <object-name>Switch</object-name>
    <property>/controls/electric/dc/master-bat[1]</property>

	<condition>
	<not>
    <property>/controls/electrical/dc/esma</property>
	</not>
  </condition>
    <interpolation>
	<entry>
        <ind>1</ind>
        <dep>-35</dep>
      </entry>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>




  <animation>
    <type>pick</type>
    <object-name>Switch</object-name>
	<condition>
	<not>
    <property>/controls/electrical/dc/esma</property>
	</not>
  </condition>
    <action>
      <name>Auto-trim</name>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>/controls/electric/dc/master-bat[1]</property>
        <step>1</step>
        <min>0</min>
        <max>1</max>
        <wrap>true</wrap>
      </binding>
     <binding>
        <command>property-toggle</command>
        <property>/instrumentation/generic/click</property>
      </binding>
    </action>
  </animation>


</PropertyList>
