<?xml version="1.0"?>
<PropertyList>
  <!--<abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>-->
  <!--<property>/consumables/fuel/tank[2]/level-lbs</property>-->
  <path>../Models/thermometerengineer.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Num0</object-name>    
    <object-name>Num1</object-name>
    <object-name>Num2</object-name>
    <object-name>Num3</object-name>
    <object-name>Total</object-name>
    <object-name>Deg</object-name>
    <object-name>Guage</object-name>
    <object-name>Fail</object-name>

</effect>
<animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num0</object-name>
    <expression>
    <prod>
    <div>
    <property>/instrumentation/temperature[2]/indicated-tmo-degc</property>
    <sum>
    <abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>
    <value>0.001</value>
    </sum>
    </div>
    <value>90</value>
    </prod>
    </expression>
    <center>
      <x-m>-0.0066</x-m>
      <y-m>0</y-m>
      <z-m>-0.0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num1</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <div>
                <abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>
              <value>100</value>
            </div>
          </floor>
          <max>
            <div>
              <difference>
                  <abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>
                <value>99</value>
                <prod>
                  <floor>
                    <div>               
                        <abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>
                      <value>100</value>
                    </div>
                  </floor>
                  <value>100</value>
                </prod>
              </difference>
              <value>1</value>
            </div>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.0066</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num2</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <div>
                <abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>
              <value>10</value>
            </div>
          </floor>
          <max>
            <div>
              <difference>
                  <abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>
                <value>9</value>
                <prod>
                  <floor>
                    <div>
                        <abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>
                      <value>10</value>
                    </div>
                  </floor>
                  <value>10</value>
                </prod>
              </difference>
              <value>1</value>
            </div>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.0066</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num3</object-name>
    <expression>
    <prod>
    <abs><property>/instrumentation/temperature[2]/indicated-tmo-degc</property></abs>
    <value>36</value>
    </prod>
    </expression>
    <center>
      <x-m>-0.0066</x-m>
      <y-m>0</y-m>
      <z-m>-0.0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  
    <animation>
    <type>select</type>
    <object-name>Fail</object-name>
    <condition>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </condition>
    <center>
      <x-m>-0.005</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Num1</object-name>
    <object-name>Num2</object-name>
    <object-name>Num3</object-name>
    <object-name>Num0</object-name>
    <object-name>Total</object-name>
    <object-name>Deg</object-name>
    <object-name>Guage</object-name>
    <object-name>Fail</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than> 
 </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
