<?xml version="1.0"?>
<PropertyList>
  <!--<property>/instrumentation/mach-indicator[2]/indicated-mach</property>-->
  <!--<property>/consumables/fuel/tank[2]/level-lbs</property>-->
  <path>../Models/machmeterengineer.ac</path>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Num1</object-name>
    <object-name>Num2</object-name>
    <object-name>Num3</object-name>
    <object-name>mach</object-name>
    <object-name>dot</object-name>
    <object-name>Guage</object-name>
    <object-name>Fail</object-name>

</effect>

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num1</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <div>
                <property>/instrumentation/mach-indicator[2]/indicated-mach</property>
              <value>1</value>
            </div>
          </floor>
          <max>
            <div>
              <difference>
                  <property>/instrumentation/mach-indicator[2]/indicated-mach</property>
                <value>0.99</value>
                <prod>
                  <floor>
                    <div>               
                        <property>/instrumentation/mach-indicator[2]/indicated-mach</property>
                      <value>1</value>
                    </div>
                  </floor>
                  <value>1</value>
                </prod>
              </difference>
              <value>0.01</value>
            </div>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.0066</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num2</object-name>
    <expression>
      <prod>
        <sum>
          <floor>
            <div>
                <property>/instrumentation/mach-indicator[2]/indicated-mach</property>
              <value>0.1</value>
            </div>
          </floor>
          <max>
            <div>
              <difference>
                  <property>/instrumentation/mach-indicator[2]/indicated-mach</property>
                <value>0.09</value>
                <prod>
                  <floor>
                    <div>
                        <property>/instrumentation/mach-indicator[2]/indicated-mach</property>
                      <value>0.1</value>
                    </div>
                  </floor>
                  <value>0.1</value>
                </prod>
              </difference>
              <value>0.01</value>
            </div>
            <value>0</value>
          </max>
        </sum>
        <value>36</value>
      </prod>
    </expression>
    <center>
      <x-m>-0.0066</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition> 

    <type>rotate</type>
    <object-name>Num3</object-name>
    <property>/instrumentation/mach-indicator[2]/indicated-mach</property>
    <factor>3600</factor>
    <center>
      <x-m>-0.0066</x-m>
      <y-m>0</y-m>
      <z-m>-0.0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  
    <animation>
    <type>select</type>
    <object-name>Fail</object-name>
    <condition>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </condition>
    <center>
      <x-m>-0.005</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Num1</object-name>
    <object-name>Num2</object-name>
    <object-name>Num3</object-name>
    <object-name>mach</object-name>
    <object-name>dot</object-name>
    <object-name>Guage</object-name>
    <object-name>Fail</object-name>
  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than> 
 </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>
</PropertyList>
