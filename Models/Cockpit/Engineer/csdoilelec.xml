<?xml version="1.0"?>
<PropertyList>
  <path>../Models/csdoilelec.ac</path>



<params>
  <inlet-select>/systems/engines/engine[0]/csd-inlet-degc</inlet-select>
  <diff-select>/systems/engines/engine[0]/csd-diff-degc</diff-select>
 </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Guage</object-name>
    <object-name>Needle1</object-name>
    <object-name>Needle2</object-name>
    <object-name>AlarmOn</object-name>
    <object-name>AlarmOff</object-name>
</effect>



<animation>
    <type>select</type>
    <object-name>FF</object-name>
    <condition>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </condition>    
  </animation>
  
  
 <animation>
    <type>select</type>
    <object-name>AlarmOn</object-name>
    <condition>
    <not>
        <less-than>
          <property alias="/params/inlet-select"/>
          <value>150</value>
        </less-than>
        </not>
    </condition>    
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>AlarmOff</object-name>
    <condition>
        <less-than>
          <property alias="/params/inlet-select"/>
          <value>150</value>
        </less-than>
    </condition>    
  </animation>


 

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Needle1</object-name>        
    <expression>
    <prod>
   <property alias="/params/inlet-select"/>
     <value>0.9</value>
     </prod>
     </expression>
    <center>
      <x-m>0</x-m>
      <y-m>-0.00255</y-m>      
      <z-m>0.0005</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Needle2</object-name>    
    
     <expression>
    <prod>
   <property alias="/params/diff-select"/>
     <value>4.5</value>
     </prod>
     </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0.00225</y-m>
      <z-m>0.0005</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
 
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Guage</object-name>
    <object-name>Needle1</object-name>
    <object-name>Needle2</object-name>

  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

</PropertyList>
