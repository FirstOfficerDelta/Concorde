<?xml version="1.0"?>
<PropertyList>
  <path>../Models/oilpressure.ac</path>
  <params>
  <oil-select>/engines/engine[3]/oil-pressure-psi</oil-select>
 </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Cube</object-name>
    <object-name>AlarmOn</object-name>
    <object-name>AlarmOff</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Guage</object-name>
    <object-name>Needle</object-name>

</effect>
<animation>
    <type>select</type>
    <object-name>AlarmOn</object-name>
    <condition>
     <and>
      <or>
        <greater-than>
       <property>/engines/engine[3]/oil-pressure-psi</property>
       <value>15</value>
      </greater-than>
      </or>
      <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>AlarmOff</object-name>
    <condition>
     <and>
      <or>
      <not>
        <greater-than>
       <property>/engines/engine[3]/oil-pressure-psi</property>
       <value>15</value>
      </greater-than>
      </not>
      </or>
      <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>
  

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>

    <type>rotate</type>
    <object-name>Needle</object-name>
    <property>/engines/engine[3]/oil-pressure-psi</property>
    <factor>2</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
    
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Guage</object-name>
    <object-name>Needle</object-name>

  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

</PropertyList>
