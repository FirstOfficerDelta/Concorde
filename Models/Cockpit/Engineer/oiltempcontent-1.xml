<?xml version="1.0"?>
<PropertyList>
  <path>../Models/oiltempcontent.ac</path>
  <params>
  <oil-select>/engines/engine[0]/oil-pressure-psi</oil-select>
 </params>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/interior</inherits-from>
    <object-name>Frame</object-name>

</effect>

<effect>
    <inherits-from>Aircraft/Concorde/Models/Effects/flash</inherits-from>
    <object-name>Guage</object-name>
    <object-name>Needle1</object-name>
    <object-name>Needle2</object-name>
    <object-name>Alarm1On</object-name>
    <object-name>Alarm1Off</object-name>
    <object-name>Alarm2On</object-name>
    <object-name>Alarm2Off</object-name>

</effect>


  <animation>
    <type>select</type>
    <object-name>Alarm1On</object-name>
    <condition>
     <and>
      <not>
    <property>/controls/lighting/crew/engineer/center/test</property>
   </not>
      <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Alarm1Off</object-name>
    <condition>
    <and>
       <property>/controls/lighting/crew/engineer/center/test</property>
       <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>Alarm2On</object-name>
    <condition>
     <and>
      <not>
    <property>/controls/lighting/crew/engineer/center/test</property>
   </not>
      <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Alarm2Off</object-name>
    <condition>
    <and>
       <property>/controls/lighting/crew/engineer/center/test</property>
       <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
      </greater-than>
     </and>
    </condition>
  </animation>

  <animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>
    
    <type>rotate</type>
    <object-name>Needle1</object-name>
          <property>/engines/engine[0]/oil-pressure-psi</property>
        <factor>2</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0.00332</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
<animation>
    <condition><not>
        <less-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </less-than>
    </not></condition>
    <type>rotate</type>
    <object-name>Needle2</object-name>
    <expression>
          <value>120</value>
          </expression>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>-0.00289</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  

    
 
  <!--Default Lighting-->
  <animation>
    <type>material</type>
    <object-name>Guage</object-name>
    <object-name>Needle1</object-name>
    <object-name>Needle2</object-name>

  <condition>
  <and>
    <property>controls/lighting/instrument-lights</property>
        <greater-than>
          <property>/systems/electrical/outputs/specific</property>
          <value>20.0</value>
        </greater-than>
  </and>
  </condition>
  <emission>
   <red>0.7</red>
   <green>0.2</green>
   <blue>0.2</blue>
   <factor-prop>/controls/lighting/instruments-norm</factor-prop>
  </emission>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
  <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
  </emission>
 </animation>

</PropertyList>
